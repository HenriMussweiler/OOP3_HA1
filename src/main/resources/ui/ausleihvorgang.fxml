<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AusleihvorgangController">

    <Label text="Teilnehmer:" />
    <ComboBox fx:id="teilnehmerComboBox" />

    <Label text="Fahrzeug:" />
    <ComboBox fx:id="fahrzeugComboBox" />

    <Label text="Startdatum:" />
    <DatePicker fx:id="startdatumPicker" />

    <Label text="Enddatum:" />
    <DatePicker fx:id="enddatumPicker" />

    <Button text="Reservieren" onAction="#handleReservierenButton" />
    <Button text="Beenden" onAction="#handleBeendenButton" />

</VBox>
