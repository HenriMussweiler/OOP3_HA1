<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="422.0" prefWidth="620.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AusleihvorgangController">

    <children>
        <Label layoutX="10" layoutY="10" text="Teilnehmer:" />
        <ComboBox fx:id="teilnehmerComboBox" layoutX="10" layoutY="40" />

        <Label layoutX="10" layoutY="80" text="Fahrzeug:" />
        <ComboBox fx:id="fahrzeugComboBox" layoutX="10" layoutY="110" />

        <Label layoutX="10" layoutY="150" text="Startdatum:" />
        <DatePicker fx:id="startdatumPicker" layoutX="10" layoutY="180" />

        <Label layoutX="10" layoutY="220" text="Enddatum:" />
        <DatePicker fx:id="enddatumPicker" layoutX="10" layoutY="250" />

        <Button fx:id="reservierenButton" layoutX="12.0" layoutY="344.0" onAction="#reservierenButtonClicked" text="Reservieren" />
        <Button fx:id="zurueckButton" layoutX="12.0" layoutY="376.0" onAction="#zurueckButtonClicked" text="Zurück" />
        <Button fx:id="aktualisierenButton" layoutX="512.0" layoutY="343.0" onAction="#aktualisierenButtonClicked" text="Aktualisieren" />

        <TableView fx:id="ausleihvorgangTableView" layoutX="200" layoutY="10" prefHeight="300" prefWidth="400">
            <columns>
                <TableColumn fx:id="ausleihvorgangIdColumn" text="AusleihvorgangID" />
                <TableColumn fx:id="teilnehmerColumn" text="Teilnehmer" />
                <TableColumn fx:id="fahrzeugColumn" text="Fahrzeug" />
                <TableColumn fx:id="startdatumColumn" text="Startdatum" />
                <TableColumn fx:id="enddatumColumn" text="Enddatum" />
            </columns>
        </TableView>
      <Button fx:id="stornierenButton" layoutX="276.0" layoutY="376.0" onAction="#stornierenButtonClicked" text="Stornieren" />
      <ComboBox fx:id="stornierenComboBox" layoutX="200.0" layoutY="343.0" prefWidth="150.0" />
      <Label layoutX="200.0" layoutY="317.0" text="Zum Stornieren bitte die AusleihvorgangID auswählen:" />
      <Button fx:id="aendernButton" layoutX="200.0" layoutY="376.0" onAction="#aendernButtonClicked" text="Ändern" />
    </children>

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
</AnchorPane>
