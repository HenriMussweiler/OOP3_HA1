<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.FahrzeugController">

    <Label text="Hersteller:" />
    <TextField fx:id="herstellerField" />

    <Label text="Modell:" />
    <TextField fx:id="modellField" />

    <Button text="Hinzufügen" onAction="#handleHinzufuegenButton" />
    <Button text="Ändern" onAction="#handleAendernButton" />
    <Button text="Löschen" onAction="#handleLoeschenButton" />

</VBox>
